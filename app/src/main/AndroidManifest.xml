<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lky.whome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/net_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Whome"
        android:usesCleartextTraffic="true">
        <activity android:name="com.lky.whome.activity.HomeDetailActivity"
                  android:theme="@style/Theme.Whome.Font"/>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/net_security_config" />

        <activity android:name="com.lky.whome.activity.SplashActivity"
                  android:theme="@style/Theme.Whome.Font">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lky.whome.activity.MainActivity"
                  android:theme="@style/Theme.Whome.Font">
        </activity>
        <activity android:name="com.lky.whome.activity.PopupActivity" android:theme="@android:style/Theme.Dialog" />

        <meta-data android:name="com.kakao.sdk.AppKey" android:value="6aa575c4eba32ab64f76b66ee3c2f51b"/>
    </application>

</manifest>